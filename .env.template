# Helformer Trading Bot Environment Configuration
# Copy this file to .env and fill in your actual values

# ======================
# EXCHANGE API CREDENTIALS
# ======================
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_secret_here

# ======================
# TRADING CONFIGURATION
# ======================
# Trading mode: 'mainnet' for live trading, 'testnet' for testing
MODE=testnet

# Symbols to trade (comma-separated)
SYMBOLS=BTC/USDT,ETH/USDT,SOL/USDT

# Timeframes to analyze (comma-separated)
TIMEFRAMES=15m,1h

# ======================
# RISK MANAGEMENT
# ======================
# Maximum percentage of account to risk per trade
MAX_POSITION_SIZE=0.25

# Base position size percentage
BASE_POSITION_SIZE=0.10

# Minimum trade size in USD
MIN_TRADE_SIZE=100

# ======================
# ADVANCED SETTINGS
# ======================
# Enable test mode (uses limited data for faster testing)
TEST_MODE=true

# Data rows limit in test mode
TEST_MODE_DATA_ROWS=10000

# Prediction confidence threshold (0.0-1.0)
CONFIDENCE_THRESHOLD=0.70

# Minimum prediction confidence to trade
MIN_PREDICTION_CONFIDENCE=0.01

# Cooldown between predictions (seconds)
PREDICTION_COOLDOWN=300

# ======================
# LOGGING & MONITORING
# ======================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file name
LOG_FILE=helformer_trading_bot.log

# Enable performance monitoring
ENABLE_MONITORING=true

# ======================
# NOTIFICATION SETTINGS
# ======================
# Discord webhook for alerts (optional)
DISCORD_WEBHOOK_URL=

# Email settings (optional)
EMAIL_SMTP_SERVER=
EMAIL_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_TO=

# ======================
# DATABASE SETTINGS (Optional)
# ======================
# SQLite database file for trade history
DATABASE_FILE=helformer_trades.db

# Enable database logging
ENABLE_DATABASE=false
